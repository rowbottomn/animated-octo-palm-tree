/*
 * SimpleArrayExample 
 * Rowbottom, Sept 27 2018
 * Program hold numbers from 1 - 20 in an array 
 */


public class SimpleArrayExample {
	
	static void say(String msg){
		System.out.println(msg);
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//declare and construct the array
		int [] arr = new int [20]; 
		
		//use a for loop to fill the array with values
		for (int i = 0; i < arr.length; i++){
			arr[i] = i+1;
		}
		//use an array to display the values
		for (int i = 0; i < arr.length; i++){
			say(""+arr[i]);
		}
		
		say (""+arr);
	}

}
